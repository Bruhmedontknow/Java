import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        MathHelper mathHelper = new MathHelper();
        int opcao;

        do {
            System.out.println("Menu:");
            System.out.println("1. Próximo número");
            System.out.println("2. Juntar nome e apelido");
            System.out.println("3. Maior número");
            System.out.println("4. Soma de números");
            System.out.println("5. Média de números");
            System.out.println("0. Sair");
            System.out.print("Escolha uma opção: ");
            opcao = scanner.nextInt();

            switch (opcao) {
                case 1:
                    System.out.print("Digite um número: ");
                    int numero = scanner.nextInt();
                    System.out.println("Próximo número: " + mathHelper.numeroSeguinte(numero));
                    break;

                case 2:
                    System.out.print("Digite o nome: ");
                    String nome = scanner.next();
                    System.out.print("Digite o apelido: ");
                    String apelido = scanner.next();
                    System.out.println("Nome completo: " + mathHelper.juntarNome(nome, apelido));
                    break;

                case 3:
                    System.out.print("Quantos números você deseja inserir? ");
                    int n = scanner.nextInt();
                    int[] numeros = new int[n];
                    System.out.println("Digite os números:");
                    for (int i = 0; i < n; i++) {
                        numeros[i] = scanner.nextInt();
                    }
                    System.out.println("Maior número: " + mathHelper.maior(numeros));
                    break;

                case 4:
                    System.out.print("Quantos números você deseja inserir? ");
                    n = scanner.nextInt();
                    numeros = new int[n];
                    System.out.println("Digite os números:");
                    for (int i = 0; i < n; i++) {
                        numeros[i] = scanner.nextInt();
                    }
                    System.out.println("Soma: " + mathHelper.soma(numeros));
                    break;

                case 5:
                    System.out.print("Quantos números você deseja inserir? ");
                    n = scanner.nextInt();
                    double[] numerosDouble = new double[n];
                    System.out.println("Digite os números:");
                    for (int i = 0; i < n; i++) {
                        numerosDouble[i] = scanner.nextDouble();
                    }
                    System.out.println("Média: " + mathHelper.media(numerosDouble));
                    break;

                case 0:
                    System.out.println("Saindo...");
                    break;

                default:
                    System.out.println("Opção inválida. Tente novamente.");
            }
            System.out.println();
        } while (opcao != 0);

        scanner.close();
    }
}
